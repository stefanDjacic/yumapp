@*@model List<PostModel>*@
@{    
    ViewData["Title"] = "Profile";

    AppUserModel userProfile = ViewBag.UserProfile;
}

<div class="d-flex flex-column">
    <div class="user-profile-background bg-success h-75 mb-5 mt-3 rounded-circle w-100 d-flex">
        <img src="@userProfile.PhotoPath" alt="User photo" class="user-profile-photo img-thumbnail" />
        <div class="user-profile-info ml-5 align-self-center font-weight-light">
            <p class="mb-2 text-white">
                Name: @userProfile.FirstName @userProfile.LastName
            </p>
            <p class="mb-2 text-white">
                DOB: @userProfile.DateOfBirth.ToShortDateString()
            </p>
            <p class="mb-2 text-white">
                Email: @userProfile.Email
            </p>
            <p class="mb-2 text-white">
                Gender: @userProfile.Gender
            </p>
            @*<p class="mb-2">
                About: @userProfile.About
            </p>*@
        </div>
    </div>

    <div class="d-flex row">
        <div class="friends-and-yums col-2">
            <div class="list-group">
                @*<button type="button" class="list-group-item list-group-item-action active">
                    Cras justo odio
                </button>*@
                <button type="button" class="list-group-item list-group-item-action">
                    <i class="fas fa-user"></i>
                    Following
                </button>
                <button type="button" class="list-group-item list-group-item-action">
                    <i class="fas fa-users"></i>
                    Followers
                </button>
                <button type="button" class="list-group-item list-group-item-action">
                    <i class="fas fa-thumbs-up"></i>
                    Liked posts
                </button>
                MORAS DA NAPRAVIS RAZLICIT PRISTUP PROFILU U ZAVISNOSTI DA LI JE TRENUTNI KORISNIK PRISTUPIO SVOM PROFILU!!!!
            </div>
        </div>

        <div class="verical-line h-auto ml-5 mr-5 bg-secondary">

        </div>

        <div class="userposts col-8">
            <partial name="_UserPostsPartial" />
        </div>
    </div>
</div>
