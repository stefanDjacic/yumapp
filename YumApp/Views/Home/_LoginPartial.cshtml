@model LoginModel

<form asp-action="Login" asp-controller="Home" method="post" class="w-100">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-0">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger h-25 d-inline-block"></span>
    </div>
    <div class="form-group mb-0">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger h-25 d-inline-block"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
    </div>    
    <hr />    
    @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
    <button type="submit" class="btn btn-success">Login</button>
</form>
