@model LoginModel

<form asp-action="Login" asp-controller="Home" method="post" class="w-100">
    <div asp-validation-summary="ModelOnly" class="text-danger w-100 h-25"></div>
    <div class="form-group mb-0">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger h-25 d-inline-block"></span>
    </div>
    <div class="form-group mb-0">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger h-25 d-inline-block"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
    </div>
    <hr />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">
            Login
        </button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
            Back
        </a>
    </div>
</form>
